{
  "name": "go2asia-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Go2Asia MVP - Digital ecosystem for travel, life, and business in Southeast Asia",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf .turbo",
    "openapi:bundle": "node scripts/openapi_bundle.mjs",
    "gen:types": "pnpm openapi:bundle && orval --config orval.config.ts --output types",
    "gen:sdk": "pnpm openapi:bundle && orval --config orval.config.ts --output sdk",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.12.0",
    "orval": "^7.3.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3",
    "yaml": "^2.8.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
