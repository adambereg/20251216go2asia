        "fontSize": "0.875rem"
      },
      "large": {
        "paddingX": "1.5rem",
        "paddingY": "0.75rem",
        "fontSize": "1rem"
      },
      "xlarge": {
        "paddingX": "2rem",
        "paddingY": "1rem",
        "fontSize": "1.125rem"
      }
    }
  },
  "icons": {
    "sizes": {
      "small": 16,
      "medium": 20,
      "large": 24,
      "xlarge": 28
    }
  },
  "backdropBlur": {
