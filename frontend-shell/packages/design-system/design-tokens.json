  "typography": {
    "fontFamily": {
      "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif"
    },
    "fontSize": {
      "h1": {
        "mobile": "1.875rem",
        "tablet": "2.25rem",
        "desktop": "3rem"
      },
      "h2": {
        "mobile": "1.5rem",
        "desktop": "1.875rem"
      },
      "h3": {
        "mobile": "1.25rem",
        "desktop": "1.5rem"
      },
      "h4": {
        "mobile": "1.125rem",
        "desktop": "1.25rem"
      },
      "large": {
        "mobile": "1.125rem",
        "desktop": "1.25rem"
      },
      "base": {
        "mobile": "0.875rem",
        "desktop": "1rem"
      },
      "small": {
        "mobile": "0.75rem",
        "desktop": "0.875rem"
      },
      "tiny": "0.75rem"
    },
    "fontWeight": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "heading": 1.2,
      "body": 1.5,
      "relaxed": 1.75
    }
  },
  "spacing": {
    "section": {
      "mobile": "2rem",
      "desktop": "3rem"
    },
    "header": {
      "mobile": "1rem",
      "desktop": "1.5rem"
    },
    "element": {
      "mobile": "0.5rem",
      "desktop": "0.75rem"
    },
    "gap": {
      "small": "0.5rem",
      "medium": "0.75rem",
      "mediumDesktop": "1rem",
      "large": "1rem",
      "largeDesktop": "1.5rem"
    },
    "container": {
      "padding": {
        "mobile": "1rem",
        "tablet": "1.5rem"
      }
    }
  },
  "borderRadius": {
    "small": "0.5rem",
    "medium": "0.75rem",
    "large": "1rem",
    "xlarge": "1.5rem",
    "full": "9999px"
  },
  "shadows": {
    "card": "0 1px 2px rgba(15, 23, 42, 0.05)",
    "cardHover": "0 10px 15px -3px rgba(15, 23, 42, 0.1), 0 4px 6px -2px rgba(15, 23, 42, 0.05)",
    "lift": "0 10px 15px -3px rgba(15, 23, 42, 0.1), 0 4px 6px -2px rgba(15, 23, 42, 0.05)",
    "xlHover": "0 20px 25px -5px rgba(15, 23, 42, 0.1), 0 10px 10px -5px rgba(15, 23, 42, 0.04)"
  },
  "transitions": {
    "duration": {
      "default": "200ms",
      "medium": "250ms",
      "slow": "350ms"
    },
    "timing": "cubic-bezier(0.4, 0, 0.2, 1)"
  },
  "zIndex": {
    "appbar": 50,
    "modal": 50,
    "dropdown": 40,
    "overlay": 30,
    "base": 1
  },
  "breakpoints": {
    "mobile": "< 768px",
    "tablet": "768px",
    "desktop": "1024px",
    "wide": "1280px"
  },
  "layout": {
    "appBar": {
      "height": "4rem",
      "heightPx": "64px"
    },
    "bottomNav": {
      "height": "4rem",
      "heightPx": "64px"
    },
    "container": {
      "maxWidth": "80rem",
      "maxWidthPx": "1280px"
